@model IEnumerable<WebApplication1.Models.course>

@{
    ViewBag.Title = "Index";
}

<hr />
<p>
    @Html.ActionLink("Add New Course", "Create")
</p>
<table class="table" style=" border: 1px solid #ddd; padding: 8px; border-collapse: collapse; background-color: #96dff7">
    <tr style="background-color: #61bdf9">
        <th>
            @Html.DisplayNameFor(model => model.course1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
